# =============================================================================
# TERRAFORM VARIABLES EXAMPLE
# =============================================================================
# Copy this file to terraform.tfvars and customize the values
# Security: Never commit terraform.tfvars to version control
# =============================================================================

# =============================================================================
# REQUIRED VARIABLES (You MUST set these)
# =============================================================================

# Your domain for Vault (must be managed by Route53)
vault_domain = "vault.example.com"

# Route53 hosted zone ID for your domain
# Get this from: aws route53 list-hosted-zones --query 'HostedZones[*].[Name,Id]' --output table
route53_zone_id = "Z1234567890ABC"

# Your public IP address in CIDR format
# Get your IP: curl -s https://checkip.amazonaws.com
# Add /32 for single IP: e.g., "203.0.113.42/32"
my_ip = "203.0.113.42/32"

# =============================================================================
# OPTIONAL VARIABLES (Defaults will be used if not set)
# =============================================================================

# AWS Region for deployment
aws_region = "us-west-2"

# EC2 instance type (t3.micro is sufficient for development)
instance_type = "t3.micro"

# Vault version to install (use specific version for stability)
vault_version = "1.15.6"

# Environment designation (affects tagging and naming)
environment = "dev"

# Store SSH keys in AWS Parameter Store (recommended for team access)
store_ssh_key_in_ssm = true

# AMI ID override (optional - leave empty for auto-detection)
# Only uncomment if you need to specify a particular AMI
# ami_id = ""

# =============================================================================
# RESOURCE TAGGING
# =============================================================================

# Tags applied to all AWS resources
tags = {
  Project     = "vault-development"
  Environment = "dev"
  ManagedBy   = "terraform"
  Owner       = "development-team"
  Purpose     = "hashicorp-vault-learning"
}